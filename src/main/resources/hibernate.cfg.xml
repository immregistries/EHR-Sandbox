    <mapping resource="org/immregistries/ehr/model/NextOfKin.hbm.xml"/>
    <mapping resource="org/immregistries/ehr/model/LogsOfModifications.hbm.xml"/>
    <mapping resource="org/immregistries/ehr/model/ImmunizationRegistry.hbm.xml"/>
    <mapping resource="org/immregistries/ehr/model/Facility.hbm.xml"/>
    <mapping resource="org/immregistries/ehr/model/Clinician.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
